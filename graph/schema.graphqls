# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Record {
	id: ID!
	name: String!
	amount: Float!
	prePayAddress: String!
	shouldPayAddress: [String!]!
}

type Payment {
	amount: Float!
	address: String!
}

type Tx {
	input: [Payment!]!
	output: Payment!
}

type Trip {
	id: ID!
	name: String!
	records: [Record!]!
	moneyShare: [Tx!]!
	addressList: [String!]!
}

type Subscription {
	subRecordCreate(tripId: ID!): Record!
	subRecordDelete(tripId: ID!): ID!
	subRecordUpdate(tripId: ID!): Record!
	subAddressCreate(tripId: ID!): String!
	subAddressDelete(tripId: ID!): String!
}

type Query {
	trip(id: ID!): Trip
}

input NewRecord {
	name: String!
	amount: Float!
	prePayAddress: String!
	shouldPayAddress: [String!]!
}

input NewTrip {
	name: String!
}

type Mutation {
	createTrip(input: NewTrip!): Trip!
	updateTrip(id: ID!, input: NewTrip!): Trip!
	createRecord(tripId: ID!, input: NewRecord!): Record!
	updateRecord(id: ID!, input: NewRecord!): Record!
	removeRecord(id: ID!): ID!
	createAddress(tripId: ID!, address: String!): String!
	deleteAddress(tripId: ID!, address: String!): String!
}
